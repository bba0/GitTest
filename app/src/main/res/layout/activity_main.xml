<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.main.MainActivity">
    <AutoCompleteTextView
            android:id="@+id/main_auto_complete_text_view"
            android:layout_width="0dp"
            android:hint="@string/search_hint"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/main_search_button"/>
    <Button
            android:id="@+id/main_search_button"
            android:layout_width="70dp"
            android:layout_height="0dp"
            android:text="@string/search"
            app:layout_constraintStart_toEndOf="@id/main_auto_complete_text_view"
            app:layout_constraintTop_toTopOf="@id/main_auto_complete_text_view"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/main_auto_complete_text_view"/>

    <Button
            android:id="@+id/api_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/api"
            app:layout_constraintTop_toBottomOf="@id/main_auto_complete_text_view"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/local_button"
            app:layout_constraintHorizontal_chainStyle="packed"/>

    <Button
            android:id="@+id/local_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/local"
            app:layout_constraintStart_toEndOf="@id/api_button"
            app:layout_constraintTop_toTopOf="@id/api_button"
            app:layout_constraintEnd_toEndOf="parent"/>
    <FrameLayout
            android:id="@+id/fragment_frame_layout"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/api_button"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:background="#ff00ff"/>
</android.support.constraint.ConstraintLayout>